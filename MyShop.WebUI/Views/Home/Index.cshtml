@model MyShop.Core.ViewModel.ProductListViewModel

@{
    ViewBag.Title = "Home Page";
}
<div class="col-md-2">
    <h4>Filter</h4>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class = Request["category"] == null ? "list-group-item active" : "list-group-item" })
        @foreach (var item in Model.ProductCategories)
        {
            @Html.ActionLink(item.CategoryName, "Index", new { category = item.CategoryName },new { @class = Request["category"] == item.CategoryName ? "list-group-item active" : "list-group-item" })
        }
    </div>
</div>

<div class="col-md-10">
    <h1>Products</h1>
    @foreach (var item in Model.Products)
    {
        <div class="col-md-3" style="height:450px; margin:10px;padding:10px; border:solid thin whitesmoke">

            <div class="col-md-12">
                <img class="img" style="height:200px" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <p>@item.Price</p>
            </div>

            <div class="col-md-12">
                <a href="#" class="btn btn-default">Add to basket</a>
            </div>
        </div>
    }
</div>
<div class="col-md-12 clearfix"></div>
